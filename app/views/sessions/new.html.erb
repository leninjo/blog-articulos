<h1 class="text-center my-3">Inciar Sesión</h1>
<div class="container">
      <div class="row justify-content-center">
            <div class="col-6">
                  <%= form_with(scope: :session, url: login_path, class: "shadow p-4 mb-3 bg-dark rounded", local: true) do |f| %>
                        <div class="form-group row text-white">
                              <%= f.label :email, class: "col-2 col-form-label" %>
                              <div class="col-10">
                                    <%= f.email_field :email, class: "form-control", placeholder: "Email"%>
                              </div>
                        </div>   
                        <br>
                        <div class="form-group row text-white mb-4">
                              <%= f.label :password, class: "col-2 col-form-label" %>
                              <div class="col-10">
                                    <%= f.password_field :password, class: "form-control", placeholder: "Ingresa tu contraseña"%>
                              </div>
                        </div>   

                        <div class="form-group row justify-content-center">
                              <%= f.submit "Iniciar Sesión", class: "btn btn-outline-light btn-lg" %>
                        </div>
                  <% end %>
            </div>
      </div>
      <div class="text-center font-weight-bold my-5">
            <%= link_to '[ Regresar a articulos ]', articles_path(@articles), class: "text-dark"%>
      </div>
</div>