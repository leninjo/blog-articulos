<div class="container">
      <div class="row justify-content-center">
            <div class="col-6">
            <%= render 'shared/errors', obj: @user %>
                  <%= form_with(model: @user, class: "shadow p-4 mb-3 bg-dark rounded", local: true) do |f| %>
                        <div class="form-group row text-white">
                              <%= f.label :username, class: "col-2 col-form-label" %>
                              <div class="col-10">
                                    <%= f.text_field :username, class: "form-control", placeholder: "Nombre de usuario" %>
                              </div>
                        </div>
                        <br>
                        <div class="form-group row text-white">
                              <%= f.label :email, class: "col-2 col-form-label" %>
                              <div class="col-10">
                                    <%= f.email_field :email, class: "form-control", placeholder: "Email"%>
                              </div>
                        </div>   
                        <br>
                        <div class="form-group row text-white mb-4">
                              <%= f.label :password, class: "col-2 col-form-label" %>
                              <div class="col-10">
                                    <%= f.password_field :password, class: "form-control", placeholder: "ContraseÃ±a"%>
                              </div>
                        </div>   

                        <div class="form-group row justify-content-center">
                              <%= f.submit(@user.new_record? ? "Registrarme" : "Actualizar", class: "btn btn-outline-light btn-lg") %>
                        </div>
                  <% end %>
            </div>
      </div>
      <div class="text-center font-weight-bold my-5">
            <%= link_to '[ Regresar a los articulos ]', articles_path, class: "text-dark"%>
      </div>
</div>