<h1 class="text-center my-3">Usuarios de Articulos</h1>
<div class="flickr_pagination my-2">
    <%= will_paginate @users, :container => false %>
</div>
<div class="container-fluid">
      <% @users.each do |user| %>
            <div class="row justify-content-md-center">
                  <div class="col-8 mb-4">
                        <div class="card text-center shadow mb-5 bg-white rounded"">
                              <div class="card-header font-italic">
                              <%= link_to user.username, user %>
                              </div>
                                    <div class="card-body">
                                          <h5 class="card-title">
                                                <%= link_to gravatar_for(user, size: 150), user %>
                                          </h5>
                                          <p class="card-text"><%= pluralize(user.articles.count, "articulos") %></p>
                                          <%= link_to 'Ver perfil', user, class: "btn btn-outline-success"%>
                                          <% if logged_in? %>
                                                <%= link_to 'Editar perfil', edit_user_path(user), class: "btn btn-outline-primary" %>
                                          <% end %>
                                    </div>
                              <div class="card-footer text-muted">
                                    <small>Unido: <%= time_ago_in_words(user.created_at) %>
                                    </small>
                              </div>
                        </div>
                  </div>
            </div>
      <% end %>
</div>
<div class="flickr_pagination my-2">
    <%= will_paginate @users, :container => false %>
</div>